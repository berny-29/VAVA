<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.Controllers.ProfileController">
  <stylesheets>
    <URL value="@../../application.css" />
  </stylesheets>
  <children>
      <TabPane prefHeight="482.0" prefWidth="640.0" style="-fx-background-color: #c6cdd2;" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="%tab.statistics">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="447.0" prefWidth="640.0">
                     <children>
                        <Label layoutX="20.0" layoutY="15.0" prefHeight="30.0" prefWidth="192.0" style="-fx-alignment: center-left;" text="%label.myStatistics">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <PieChart fx:id="PieChart" layoutX="10.0" layoutY="164.0" prefHeight="220.0" prefWidth="210.0" />
                        <BarChart fx:id="barChart" layoutX="226.0" layoutY="147.0" prefHeight="240.0" prefWidth="230.0">
                          <xAxis>
                            <CategoryAxis side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis side="LEFT" />
                          </yAxis>
                        </BarChart>
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab text="%tab.calendar">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="20.0" layoutY="15.0" prefHeight="30.0" prefWidth="163.0" style="-fx-alignment: center-left;" text="%label.myCalendar">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="%tab.plans">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="325.0">
                     <children>
                        <Label layoutX="9.0" layoutY="8.0" prefHeight="30.0" prefWidth="176.0" style="-fx-alignment: center-left;" text="%label.myPlans">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="myPlansArea" layoutX="14.0" layoutY="56.0" prefHeight="120.0" prefWidth="434.0" />
                        <Label layoutX="9.0" layoutY="205.0" prefHeight="39.0" prefWidth="234.0" text="%label.createPlan">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <ChoiceBox fx:id="selectNewPlan" layoutX="9.0" layoutY="254.0" prefHeight="30.0" prefWidth="157.0" />
                        <DatePicker fx:id="pickDate" layoutX="176.0" layoutY="254.0" prefHeight="31.0" prefWidth="164.0" promptText="%datePicker.startTime" />
                        <Button fx:id="createPlan" layoutX="370.0" layoutY="254.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="77.0" style="-fx-background-color: #176285#176285;" text="%button.createPlan" textFill="WHITE" />
                        <Button fx:id="deletePlan" layoutX="193.0" layoutY="363.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="77.0" style="-fx-background-color: #176285#176285;" text="%button.deletePlan" textFill="WHITE" />
                        <ChoiceBox fx:id="selectDeletePlan" layoutX="9.0" layoutY="363.0" prefHeight="30.0" prefWidth="157.0" />
                        <Label layoutX="8.0" layoutY="313.0" prefHeight="39.0" prefWidth="234.0" text="%label.deletePlan">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab text="%tab.children">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="480.0" prefWidth="640.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
      <AnchorPane layoutX="470.0" layoutY="45.0" prefHeight="437.0" prefWidth="170.0" style="-fx-background-color: #aab4bb;">
         <children>
            <ImageView fitHeight="70.0" fitWidth="180.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Images/Logo_mensie.png" />
               </image>
            </ImageView>
            <Button fx:id="logOutButton" layoutX="18.0" layoutY="399.0" mnemonicParsing="false" onMouseClicked="#go_to_login" prefHeight="26.0" prefWidth="128.0" style="-fx-background-color: #176285#176285;" text="%button.logOut" textFill="WHITE" />
            <ImageView fitHeight="54.0" fitWidth="52.0" layoutX="57.0" layoutY="98.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Images/progress.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="60.0" fitWidth="58.0" layoutX="55.0" layoutY="172.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Images/health.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="65.0" fitWidth="58.0" layoutX="61.0" layoutY="257.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Images/food.png" />
               </image>
            </ImageView>
            <Button fx:id="languageSwitch" layoutX="17.0" layoutY="360.0" mnemonicParsing="false" onMouseClicked="#changePageLang" prefHeight="26.0" prefWidth="128.0" style="-fx-background-color: #176285#176285;" text="SK  | EN" textFill="WHITE" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
